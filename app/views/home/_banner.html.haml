.row
  .small-12.columns
    %ul{ 'data-orbit' => '', 'data-options' => ' animation_speed: 0; timer_speed: 6000; navigation_arrows: false; next_on_click: false; pause_on_hover: false; resume_on_mouseout: false; slide_number: false; stack_on_small: false; variable_height: false;' }
