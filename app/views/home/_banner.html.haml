            = image_tag('corto.png', :alt => 'Cor.to')
      %li
        .row.orbit-box
          .orbit-details.small-12.large-7.columns
            %h2
              = t('.title2')
            %h4
              = t('.subtitle2')
            %p
              = t('.text2')
          .orbit-image.small-12.large-5.columns.animated.fadeInRightBig
            = image_tag('mobile.png', :alt => t('.responsive'))
