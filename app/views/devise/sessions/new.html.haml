%section.banner-area.full-width
= render 'layouts/messages'

.row
  .small-12.columns
    %h3.centered
      = fa_icon 'sign-in', :text => t('.sign_in', :default => "Sign in")
    %hr

.row
  .small-12.large-6.small-centered.columns
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div
        = f.email_field :email, :label => t('.email', :default => 'Email')
      %div
        = f.password_field :password, :label => t('.password', :default => 'Password')
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me, :label => t('.remember', :default => 'Remember me')
      .centered
        = f.submit t('.sign_in', :default => "Sign in")
    %p
      = render "devise/shared/links"
