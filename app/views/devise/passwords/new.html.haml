%section.banner-area.full-width
= render 'layouts/messages'

.row
  .small-12.columns
    %h3.centered
      = t('.forgot_your_password', :default => 'Forgot your password?')
    %hr

.row
  .small-12.large-6.small-centered.columns
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      %div
        = f.email_field :email, :label => t('.email', :default => "Email")
      .centered
        = f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions")
    %p
      = render "devise/shared/links"
